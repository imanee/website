<!-- Header -->
<section id="header" class="skel-layers-fixed">
    <header>
        <span class="image"><a href="/"><img src="{{ app.config.project.avatar }}" alt="" /></a></span>
        <h1 id="logo"><a href="#">{{ app.config.project.name }}</a></h1>
        <p>{{ app.config.project.tagline }}</p>
    </header>

    {% include nav|default('_partials/nav.html.twig') %}
    <footer>
        <img src="/images/do_badge.png">
        <ul class="icons">

            {% if app.config.badges.travis %}<li><a href="https://travis-ci.org/{{ app.config.project.github }}" target="_blank"><img src="https://travis-ci.org/{{ app.config.project.github }}.svg?branch=master"></a></li>{% endif %}
            {% if app.config.badges.rtdocs %}<li><a href="{{ app.config.badges.rtdocs.url }}"><img src='https://readthedocs.org/projects/{{ app.config.badges.rtdocs.slug }}/badge/?version=latest' alt='Documentation Status' /></a></li>{% endif %}
            {% if app.config.badges.stars %}<li><a href="https://github.com/{{ app.config.project.github }}"><img src="https://img.shields.io/github/stars/{{ app.config.project.github }}.svg"></a></li>{% endif %}

        </ul>

        <ul class="icons">
            {% if app.config.social.twitter is defined %}
            <li><a href="http://twitter.com/{{ app.config.social.twitter }}" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            {% endif %}
            {% if app.config.social.facebook is defined %}
            <li><a href="https://facebook.com/{{ app.config.social.facebook }}" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            {% endif %}
            {% if app.config.project.github is defined %}
            <li><a href="https://github.com/{{ app.config.project.github }}" class="icon fa-github"><span class="label">Github</span></a></li>
            {% endif %}
        </ul>
    </footer>
</section>